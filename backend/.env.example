# ============================================
# Training Dashboard Pro - Environment Configuration
# ============================================

# Application Secret Key (REQUIRED)
# This is used for JWT token signing and must be kept secret!
# Generate a secure key using: openssl rand -hex 32
# IMPORTANT: Never commit this to version control!
SECRET_KEY=your-secret-key-here

# Debug mode (enables auto-reload + verbose logging when true)
# Leave false for stable local development to avoid constant reloads
DEBUG=false

# Database Configuration
# The database will be created automatically when you run: python init_db.py
# PostgreSQL (default)
DATABASE_URL=postgresql+psycopg2://localhost:5432/trainings.db
# Example with credentials:
# DATABASE_URL=postgresql+psycopg2://user:password@localhost:5432/trainings.db

# JWT Token Expiration (in minutes)
# Default: 30 minutes
ACCESS_TOKEN_EXPIRE_MINUTES=30

# File Storage Directories
# These directories will be created automatically
FIT_FILES_DIR=./data/fit_files
CACHE_DIR=./data/cache

# Redis Cache
REDIS_URL=redis://localhost:6379/0
REDIS_ENABLED=true
REDIS_KEY_PREFIX=training_dashboard
# Cache warmup
# Rebuild caches in the background after login if older than this threshold (hours)
CACHE_WARMUP_ENABLED=true
CACHE_WARMUP_MAX_AGE_HOURS=24
# Prevent multiple warmups for same user (seconds)
CACHE_WARMUP_LOCK_SECONDS=3600
# Delay warmup to avoid slowing initial request handling (seconds)
CACHE_WARMUP_DELAY_SECONDS=3

# CORS Origins
# Add your frontend URLs here (for development)
BACKEND_CORS_ORIGINS=["http://localhost:5173", "http://localhost:3000", "http://localhost:8080"]

# Strava API Integration (Optional)
# To enable Strava sync, create an app at https://www.strava.com/settings/api
# Then add your Client ID and Secret here
STRAVA_CLIENT_ID=
STRAVA_CLIENT_SECRET=
# Strava strips URL fragments during OAuth redirectsâ€”send to dashboard entry point
STRAVA_REDIRECT_URI=http://localhost:5173/dashboard.html
